<!DOCTYPE html>
<html>
  <head>
    <title>Customer Information</title>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link
      rel="stylesheet"
      href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
    />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <style>
      .options {
        height: 100px;
        width: 200px;
        margin-bottom: 20px;
      }
      input {
        border: none;
        border-bottom: 1px solid black;
      }
    </style>
  </head>
  <body>
    <div class="container">
      
      <br>
      <h1 class="display-6">Messages</h1>

        <table class="table table-bordered table-hover">
          <thead class="thead-dark">
            <tr>
              <th>Message</th>
              <th>Action</th>
              <th>Sent</th>
              <th>From</th>
            </tr>
          </thead>
          <tbody>
            <% for (let i = 0; i < jsonData.length; i++) { %>
              <tr>
                <td><%= jsonData[i].Message %></td>
                <td><%= jsonData[i].Action %></td>
                <td><%= jsonData[i].Sent %></td>
                <td><%= jsonData[i].From %></td>
              </tr>
            <% } %>
          </tbody>
        </table>
        <br>
        <div class="form-group d-flex justify-content-between" style="width : 200px">
          <div class="form-check">
            <input class="form-check-input" type="checkbox" value="" id="smsCheckbox">
            <label class="form-check-label" for="smsCheckbox">
              SMS
            </label>
          </div>
        
          <div class="form-check">
            <input class="form-check-input" type="checkbox" value="" id="voiceCheckbox">
            <label class="form-check-label" for="voiceCheckbox">
              Voice
            </label>
          </div>
        
          <div class="form-check">
            <input class="form-check-input" type="checkbox" value="" id="emailCheckbox">
            <label class="form-check-label" for="emailCheckbox">
              Email
            </label>
          </div>
        </div>
        
        <div class="form-group mt-3">
          <div class="form-check">
            <input class="form-check-input" type="checkbox" value="" id="timeCheckbox">
            <label class="form-check-label" for="timeCheckbox">
              Time
            </label>
          </div>
        
          <div class="form-check">
            <input class="form-check-input" type="checkbox" value="" id="reopensCheckbox">
            <label class="form-check-label" for="reopensCheckbox">
              Reopens
            </label>
          </div>
        </div>


        Message Number = <input type="text" size="1" maxlength="2" />

        <br>
        By = 
          <label for="checkbox1">&nbsp;Email</label>
          <input type="checkbox" id="checkbox1" name="checkbox1" value="value1">

          <label for="checkbox2">&nbsp;SMS</label>
          <input type="checkbox" id="checkbox2" name="checkbox2" value="value2">

          <label for="checkbox3">&nbsp;Vocal</label>
          <input type="checkbox" id="checkbox3" name="checkbox3" value="value3">
        
        <br>
        
        <label for="checkbox4">Send until we receive document(Trigger when receive)</label>
        <input type="checkbox" id="checkbox4" name="checkbox4" value="value4">
        
        <br>
        Send <select name="number">
          <% for (var i = 1; i <= 10; i++) { %>
            <option value="<%= i %>"><%= i %></option>
          <% } %>
        </select>

        

      </div>
      
    


  </body>
</html>
